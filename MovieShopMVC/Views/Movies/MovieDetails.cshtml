@model ApplicationCore.Models.MovieDetailsModel

@* Movie detail page *@
<div class="container mt-2">
    <div class="row" style="background-image: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.8) ), url(@Model.BackdropUrl); 
                            background-size: cover ">
        <div class="col-md-4">
            <div style="padding: 20px">
                @* Movie Poster *@
                <img src="@Model.PosterUrl" width="200" class="ms-5"/>
            </div>
        </div>
        <div class="col-md-6 mt-2">
            @* Title and Tagline *@
            <h2 style="color: white">@Model.Title</h2>
            <h5 style ="color: white">@Model.Tagline</h5>
            
            <div class="container">
                <div class="row">
                    <div class="col-md-3 mt-1">
                        @* Runtime and Release Date *@
                        <p style="color:white; font-size: small; text-align: left">@Model.RunTime m | @Model.ReleaseDate.Value.Year</p>
                    </div>
                    <div class="col-md-8">
                        @* Genre *@
                        @{
                            foreach (var genre in @Model.Genres)
                            {
                                <span class="badge rounded-pill bg-secondary">@genre.Name</span>
                            }
                        }
                    </div>
                </div>
            </div>
            <span class="badge bg-warning text-dark" style="font-size: 1rem;">
                ⭐
            </span>
            @* Overview paragraph *@
            <p class="mt-3" style="color: white; font-size: medium">
                <strong>Overview: </strong>@Model.Overview
            </p>    
        </div>
        <div class="d-flex col-md-2 flex-column gap-3 mt-4" style="width: 200px;">
            
            @* Review Button *@
            <button type="button" class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#reviewModal">
                <i class="bi bi-pencil-square"></i> REVIEW
            </button>

            @* Buy Button *@
            <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#buyModal">
                BUY $@Model.Price
            </button>
        </div>


        @* REVIEW MODAL *@
        <div class="modal fade" id="reviewModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title">Leave a Review</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">
                        <form id="reviewForm">
                            <!-- Rating Dropdown -->
                            <div class="mb-3">
                                <label for="rating" class="form-label">Rate this movie:</label>
                                <select class="form-select" id="rating" name="rating" required>
                                    <option value="" disabled selected>Select rating</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                    <option value="10">10</option>
                                </select>
                            </div>

                            @* Review textarea *@
                            <div class="mb-3">
                                <textarea class="form-control" name="reviewText" rows="5" placeholder="Write your review..." required></textarea>
                            </div>
                        </form>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Submit Review</button>
                    </div>

                </div>
            </div>
        </div>


        @* BUY MODAL *@
        <div class="modal fade" id="buyModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title">Purchase Item</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">
                        <p>Are you sure you want to buy this item for <strong>$@Model.Price</strong>?</p>
                    </div>

                    <form asp-controller="Movies" asp-action="Buy" method="post">
                        <input type="hidden" name="movieId" value="@Model.Id" />
                        <input type="hidden" name="price" value="@Model.Price" />
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-success">Confirm Purchase</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>
    
<div class="container mt-2">
    <div class="row">
        <div class="col-md-5 mt-3 bg-light p-3 rounded shadow-sm">
            @* Movie Facts Block *@
            <h5 class="mb-2">MOVIE FACTS</h5>
            <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                <div><i class="bi bi-calendar3"></i> Release Date</div>
                <div class="badge bg-secondary">@Model.ReleaseDate?.ToString("MMM dd, yyyy")</div>
            </div>

            <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                <div><i class="bi bi-hourglass-split"></i> Run Time</div>
                <div class="badge bg-secondary">@Model.RunTime m</div>
            </div>

            <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                <div><i class="bi bi-cash-stack"></i> Box Office</div>
                <div class="badge bg-secondary">@Model.Revenue?.ToString("C")</div>
            </div>

            <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                <div><i class="bi bi-wallet2"></i> Budget</div>
                <div class="badge bg-secondary">@Model.Budget?.ToString("C")</div>
            </div>
            <div class="row">
                <h5 class="mb-2 mt-2">TRAILERS</h5>
                @foreach (var trailer in Model.Trailers)
                {
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <a href="@trailer.TrailerUrl" target="_blank" class="text-danger fs-4">
                            <i class="bi bi-youtube"></i>
                        </a>
                        <span>@trailer.Name</span>
                    </div>
                }
            </div>
        </div>
        @* Casts Block *@
        <div class="col-md-7 mt-4 p-3 rounded shadow-sm ps-4">
            <h5 class="mb-4">CAST</h5>
            @foreach (var cast in @Model.Casts)
            {
                <div class="row align-items-center mb-3 ps-3">
                    <!-- Cast Image -->
                    <div class="col-auto">
                        <a asp-controller="Cast" asp-action="Details" asp-route-id="@cast.Id">
                            <img src="@cast.ProfilePath"
                                 class="rounded-circle"
                                 alt="@cast.Name"
                                 width="50"
                                 height="50"
                                 style="object-fit: cover;"/>
                        </a>
                    </div>

                    @* Cast Name *@
                    <div class="col">
                        <a asp-controller="Cast" 
                           asp-action="Details" 
                           asp-route-id="@cast.Id" 
                           class="text-decoration-none text-dark">@cast.Name
                        </a>
                    </div>

                    @* Character Name *@
                    <div class="col">
                        <a asp-controller="Cast" 
                           asp-action="Details" 
                           asp-route-id="@cast.Id"
                           class="text-decoration-none text-dark"> @cast.Character
                        </a>
                    </div>
                </div>
                <hr />
            }
        </div>
        
    </div>
</div>
